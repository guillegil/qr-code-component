---
import { Image } from "astro:assets";
import myQrCode from "../assets/image-qr-code.png";
---

<article
    class="qr-code-component max-w-[320px] bg-gray-50 p-4 rounded-2xl shadow-2xl"
>
    <Image src={myQrCode} alt="QR Code" class="qr-code-image rounded-2xl" />

    <div class="qr-code-description mt-4 pb-4 px-4">
        <h1 class="font-bold mb-2 text-xl text-center text-slate-900">
            Improve your front-end skills by building projects
        </h1>
        <p class="text-base text-center text-slate-500">
            Scan the QR code to visit Frontend Mentor and take your coding
            skills to the next level
        </p>
    </div>
</article>
